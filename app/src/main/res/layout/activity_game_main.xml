<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context=".activity.GameMainActivity">

    <com.pg.mikszo.friendlyletters.views.game.DrawingInGameView
        android:id="@+id/drawing_in_game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/game_command_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/game_buttons_margin"
        android:layout_marginLeft="@dimen/game_buttons_margin"
        android:layout_marginTop="@dimen/game_buttons_margin"
        android:background="#668B8B8B"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/game_previous_material"
        android:layout_width="@dimen/game_change_material_buttons_size"
        android:layout_height="@dimen/game_change_material_buttons_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/game_buttons_margin"
        android:layout_marginLeft="@dimen/game_buttons_margin"
        android:layout_marginBottom="250dp"
        android:enabled="false"
        android:background="@drawable/previous_material" />

    <Button
        android:id="@+id/game_next_material"
        android:layout_width="@dimen/game_change_material_buttons_size"
        android:layout_height="@dimen/game_change_material_buttons_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/game_buttons_margin"
        android:layout_marginRight="@dimen/game_buttons_margin"
        android:layout_marginBottom="250dp"
        android:enabled="false"
        android:background="@drawable/next_material" />

    <ImageButton
        android:id="@+id/game_animation_on_start"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:animateLayoutChanges="true"
        android:layout_centerInParent="true"
        android:background="@drawable/smiley_face"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/game_animation_car_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:animateLayoutChanges="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/game_animation_car_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:animateLayoutChanges="true"
        android:layout_below="@+id/game_animation_car_1"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/game_animation_car_3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:animateLayoutChanges="true"
        android:layout_below="@+id/game_animation_car_2"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/game_animation_car_4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:animateLayoutChanges="true"
        android:layout_below="@+id/game_animation_car_3"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/game_animation_car_5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:animateLayoutChanges="true"
        android:layout_below="@+id/game_animation_car_4"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/game_animation_balloon_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_7"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_8"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_9"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/game_animation_balloon_10"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</RelativeLayout>